                    //  sh 'npm run sample-test'

                    dir('scripts') {
                    /* execute commands in the scripts directory */
                        sh 'node BrowserStackSample.js'
                    }
                }
                // browserStackReportPublisher 'automate'
                echo 'welcome to test'
            }
        }
        stage('Deploy') { 
            steps {
                echo 'welcome to deploy'
            }
        }
    }
}